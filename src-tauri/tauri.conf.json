{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vail Zoomer",
  "version": "0.1.9",
  "identifier": "com.vailzoomer.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Vail Zoomer",
        "width": 750,
        "height": 850,
        "minWidth": 650,
        "minHeight": 750,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/VBCABLE/**/*"
    ],
    "category": "Utility",
    "shortDescription": "CW sidetone + microphone merger for video calls",
    "longDescription": "Vail Zoomer merges CW (Morse Code) sidetone with your microphone audio for video conferencing. Perfect for amateur radio operators who want to send Morse code during Zoom, Teams, Discord, or other video calls.",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com",
      "nsis": {
        "installerHooks": "./windows/hooks.nsh"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "signingIdentity": "-"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libasound2"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBMDRBQzYyRTU0RTlCRDQKUldUVW0wN2xZcXdFcXB0a3FmTmRldWw0SkFsWGc0WjlYVUpYN04vU0JjREFIN0V5Nk9JbE82MUIK",
      "endpoints": [
        "https://github.com/Vail-CW/vail-zoomer/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
